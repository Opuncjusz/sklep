<% content_for :sidebar do %>
<%= render :partial => "admin/admin_sidebar" %>
<% end %>

<h3>Produkt: <%= @product.name %></h3>

<div>
	<h4>Edytuj: </h4>
	<%= form_for [:admin, @product] do |f| %>
	<%= label_tag :category_id, "Kategoria:" %>
	<%= f.select(:category_id, options_for_select(@categories, @product.category_id)) %><br>
	<%= label_tag :name, "Nazwa:" %>
	<%= f.text_field :name %><br>
	<%= label_tag :description, "Opis:" %>
	<%= f.text_area :description %><br>
	<%= label_tag :price, "Cena:" %>
	<%= f.text_field :price %><br>
	<%= submit_tag("Zapisz zmiany w bazie danych") %>
	<% end %>
	
</div>

<div>
	<h4>Usuń produkt:</h4>
	<%= form_for [:admin, @product], :method => :delete do %>
	<%= submit_tag("Usuń") %>
	<% end %>
</div>